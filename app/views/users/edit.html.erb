<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
    <p><% pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>

      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <p>Name</p>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <p>Image</p>
          <%= f.attachment_field :profile_image, placeholder: 'プロフィール画像'%>
        </div>
        <div class="form-group">
          <p>Introduction</p>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
          <%= f.submit 'Update User', class: "btn btn-secondary"%>
      <% end %>
    </div>
  </div>
</div>
