<%= render 'user', user: @user %>

<div>
  <h2>Users</h2>
  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%=  link_to 'Show', user_path(user) %></td>
      </tr>
    <% end%>
  </table>
</div>