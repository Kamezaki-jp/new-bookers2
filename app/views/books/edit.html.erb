<% if @book.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@book.errors.count, "error") %></h4>
    <p><% pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-5 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        
        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>
      <% end %>
      
      <%= link_to 'Show', book_path(@book)%>
      |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>
